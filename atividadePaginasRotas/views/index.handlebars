  <div class="row">
    <div class="col">
      <div class="container">
        <h5 class="mb-4">Cadastrar - Agendamento de Potenciais Clientes</h5>
        <h6 class="mb-4">Sistema utilizado para agendamento de serviços</h6>
        <form name="formCadastrar" action="/cadastrar" method="post">
          <div class="mb-3 mt-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" name="nome" id="nome" class="form-control" />
          </div>
          <div class="mb-3 mt-3"><label for="telefone" class="form-label">Telefone:</label>
            <input type="tel" name="telefone" id="telefone" class="form-control" />
          </div>
          <div class="mb-3 mt-3">
            <label for="origem" class="form-label">Origem:</label>
            <select class="form-select mb-4" name="origem" aria-label="Origem" id="origem">
              <option selected disabled>Selecione uma opção</option>
              <option value="celular">Celular</option>
              <option value="email">E-mail</option>
              <option value="social">Rede social</option>
            </select>
          </div>
          <div class="mb-3 mt-3">
            <label for="dataContato" class="form-label">Data do Contato:</label>
            <input type="date" name="dataContato" id="dataContato" class="form-control mb-4" />
          </div>
          <div class="mb-3 mt-3">
            <label for="observacao" class="form-label">Observação</label>
            <textarea class="form-control mb-4" name="observacao" id="observacao" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
